<!DOCTYPE html>
<html lang="en">
<head>
<%- include("./partials/head.ejs") %>
</head>
<body>
    <header>
        <%- include("./partials/header.ejs") %>
    </header>
    <h1 class="title">List of Restaurant(s)</h1>
    <div class="container">
        <% for (let restaurant of restaurants) { %>
            <div class="card">
                <img src="<%=restaurant.image[0]%>" alt="">
                <a href="/<%=restaurant.id%>"><h3><%=restaurant.name%></h3></a>
            </div>
        <% } %>



    </div>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
<%- include("./partials/head.ejs") %>
</head>
<body>
    <header>
        <%- include("./partials/header.ejs") %>
    </header>
    <h1 class="title">List of Restaurant(s)</h1>
    <div class="container">
        <% for (let restaurant of restaurants) { %>
            <div class="card">
                <a href="/<%=restaurant.id%>"><img src="<%=restaurant.image[0]%>" alt=""></a>
                <h3><%=restaurant.name%></h3>
            </div>
        <% } %>



    </div>
</body>
</html>